<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/color_txt_background_primary">


    <EditText
        android:id="@+id/frag_add_edt_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_firstname"
        android:textSize="@dimen/txt_size_normal"
        android:textColor="@color/color_txt_primary"/>


    <EditText
        android:id="@+id/frag_add_edt_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_lastname"
        android:textSize="@dimen/txt_size_normal"
        android:textColor="@color/color_txt_primary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/frag_add_txt_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="10dp"
        android:ellipsize="end"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/txt_size_normal"
        android:textColor="@color/color_txt_primary"
        android:text="@string/btn_title_save"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            />
        <TextView
            android:id="@+id/frag_add_txt_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_weight="1"
            android:padding="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:textSize="@dimen/txt_size_normal"
            android:textColor="@color/colorPrimary"
            android:text="@string/btn_title_cancel"/>
    </LinearLayout>
</LinearLayout>